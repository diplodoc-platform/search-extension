{
  "name": "@diplodoc/search-extension",
  "version": "3.0.1",
  "description": "Lunr based offline search extension for Diplodoc platform",
  "main": "./lib/provider/index.js",
  "types": "./lib/indexer/index.d.ts",
  "engines": {
    "node": ">=22",
    "npm": ">=11.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:diplodoc-platform/search-extension.git"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:code",
    "build:code": "node esbuild/build.mjs && tsc --emitDeclarationOnly -p tsconfig.publish.json",
    "build:clean": "node scripts/clean.mjs",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "test": "vitest run --config vitest.config.mjs",
    "test:watch": "vitest --config vitest.config.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "exports": {
    ".": {
      "types": "./lib/indexer/index.d.ts",
      "default": "./lib/indexer/index.js"
    },
    "./indexer": {
      "types": "./lib/indexer/index.d.ts",
      "default": "./lib/indexer/index.js"
    },
    "./worker": "./lib/worker/index.js",
    "./worker/langs": {
      "types": "./lib/worker/langs/index.d.ts",
      "default": "./lib/worker/langs/index.js"
    },
    "./worker/langs/*": "./lib/worker/langs/*.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@diplodoc/client": "^5.0.0",
    "@diplodoc/components": "^5.0.0",
    "@diplodoc/lint": "^1.12.0",
    "@diplodoc/tsconfig": "^1.0.2",
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/lunr": "^2.3.7",
    "@types/node": "^22.19.7",
    "ts-dedent": "^2.2.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "lunr": "^2.3.9",
    "lunr-languages": "^1.14.0",
    "node-html-parser": "^6.1.13"
  }
}
